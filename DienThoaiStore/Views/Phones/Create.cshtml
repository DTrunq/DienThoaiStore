@model DienThoaiStore.Models.Phone

@{
    ViewData["Title"] = "Create";
}
<head>
    <link href="~/css/style.css" rel="stylesheet" />
</head>

<div class="container">
    <h1>THÊM SẢN PHẨM</h1>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="DienThoai" class="control-label">Tên sản phẩm:</label>
                    <input asp-for="DienThoai" class="form-control" placeholder="Enter phone name" />
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mau" class="control-label">Màu sắc:</label>
                    <input asp-for="Mau" class="form-control" placeholder="Enter color" />
                    <span asp-validation-for="Mau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HeDieuHanh" class="control-label">Hệ điều hành:</label>
                    <input asp-for="HeDieuHanh" class="form-control" placeholder="Enter operating system" />
                    <span asp-validation-for="HeDieuHanh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gia" class="control-label">Giá:</label>
                    <input asp-for="Gia" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="Gia" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ThongsoKyThuat" class="control-label">Thông số kỹ thuật:</label>
                    <input asp-for="ThongsoKyThuat" class="form-control" placeholder="Enter technical specifications" />
                    <span asp-validation-for="ThongsoKyThuat" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
